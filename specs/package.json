{
  "name": "acceptance-tests-suite",
  "version": "1.0.0",
  "description": "Acceptance Tests",
  "author": "Gennady Verdel",
  "license": "MIT", 
  "scripts": {
    "test": "env NODE_ENV=$NODE_SAMPLE_ENV jest -i --detectOpenHandles"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testTimeout": 99999,
    "testMatch": [
      "**/feature-adapters/*.js"
    ],
    "setupFiles": [
      "./dotenv-setup.js",
      "../src/common/prototype-setup.js",
      "../src/common/jest-cucumber-config.js"
    ],
    "globalTeardown": "<rootDir>/teardown.js",
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report"
        }
      ]
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "jest": "^26.1.0",
    "jest-cucumber": "^2.0.11",
    "axios": "^0.21.4",
    "config": "^3.3.3",
    "dotenv": "^8.2.0",
    "jest-html-reporter": "^3.3.0",
    "json-diff": "^0.5.4"
  }
}
